
@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<script type="text/javascript" src="http://code.jquery.com/jquery-3.3.1.js"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/d3.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/prettify.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/main.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/split.min.js")"></script>

	<link rel="stylesheet" href="@Url.Content("~/Content/styles.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/Content/prettify.css")" type='text/css' />
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<title>Index</title>
</head>
<body>
	<div id="content">
		<div id="toolbar"></div>
		<div id="left_pane" class="split split-horizontal">
			<span class="title"></span>
			<button style="display:none;" id="btnBuildTree" type="button" class="btn btn-primary btn-sm">Build tree view</button>
			<pre class="prettyprint lang-xml">

			</pre>
		</div>
		<div id="viewport" class="split split-horizontal">
			<svg>
				<defs>
					<linearGradient id="color_edge">
						<stop offset="0%" style="stop-color:rgb(255,0,0);stop-opacity:1" />
						<stop offset="100%" style="stop-color:rgb(0,250,0);stop-opacity:1" />
					</linearGradient>
					<marker id="arrow" markerWidth="6" markerHeight="6" orient="auto" refX="20" refY="0" viewBox="0 -5 10 10">
						<path d="M0,-5L10,0L0,5 L10,0 L0, -5" stroke="#4679BD" />
					</marker>
				</defs>
			</svg>
		</div>
		<div id="right_pane" class="split split-horizontal">

			<div class="dropdown form-group row" id="selectView">
				<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="ddrView" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Switch view
				</a>

				<div class="dropdown-menu" aria-labelledby="ddrView">
					<a class="dropdown-item" data-id="1" href="#">Intro</a>
					<a class="dropdown-item" data-id="2" href="#">2</a>
					<a class="dropdown-item" data-id="3" href="#">3</a>
					<a class="dropdown-item" data-id="4" href="#">4</a>
				</div>

			</div>

			<div class="form-group row">
				<h4>Project: <span id="project_name" /></h4>
			</div>

			<div class="form-group row">
				<h6>Total files: <span id="total_files" /></h6>
			</div>

			<div class="form-group row">
				<h6>Options:</h6>
			</div>

			<div class="form-group">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="highlight_leaves">
					<label class="form-check-label" for="highlight_leaves">Hightlight leaves</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="color_direction">
					<label class="form-check-label" for="color_direction">Color direction</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="show_labels">
					<label class="form-check-label" for="show_labels">Show labels</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="show_size">
					<label class="form-check-label" for="show_size">Show content size</label>
				</div>


			</div>

			<div class="form-group row">
				<button id="btnUndockNodes" type="button" class="btn btn-primary">Undock nodes</button>
			</div>

		</div>
	</div>

	<div id="mdlUndockNodes" class="modal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Undock nodes</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<p>Are you sure you want to undock all nodes?</p>
				</div>
				<div class="modal-footer">
					<button id="btnConfirmUndock" type="button" class="btn btn-primary">Yes</button>
					<button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
				</div>
			</div>
		</div>
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" ></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" ></script>

</body>
</html>
